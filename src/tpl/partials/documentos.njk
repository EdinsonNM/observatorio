{% for item in items %}

<article class="post post-large">

	<div class="post-date">
		<span class="day">{{ item.fecha_creacion.date() }}</span>
		<span class="month">{{ item.fecha_creacion.format("MMM")  }}</span>
		<span class="year">{{ item.fecha_creacion.format("Y") }}</span>
	</div>

	<div class="post-content">

		<h3 style="margin-bottom: 0;">{{ item.tipo_documento }}</h3>
		<h4><a href="{{ item.url_documento }}" target="blank">{{ item.title }}</a></h4>
		<p>{{ item.cuerpo | safe }} </p>

		<div class="post-meta">
			<span><i class="fa fa-user"></i> By <a href="#">{{ item.elaborado_por }}</a> </span>

			<a href="{{ item.url_documento }}"  target="blank" class="btn btn-xs btn-primary pull-right">Leer m√°s...</a>
		</div>

	</div>
</article>
{% endfor %}
